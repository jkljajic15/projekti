@model Bookstore.Models.Publisher
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New - publisher</h2>

@using (Html.BeginForm("CreatePost", "Publishers"))
{
    <div class="form-group">
        @Html.LabelFor(p => p.Name)
        @Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Location)
        @Html.TextBoxFor(p => p.Location, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.NumberOfPublications)
        @Html.TextBoxFor(p => p.NumberOfPublications, new { @class = "form-control" })
    </div>
    <p>
        <button type="submit" class="btn btn-primary">Create</button>
    </p>
}
